<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="bachlb">
        <createTable tableName="orders">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="customer_name" type="varchar(255)"/>
            <column name="product" type="varchar(255)"/>
            <column name="quantity" type="int"/>
            <column name="price" type="decimal(10,2)"/>
            <column name="status" type="varchar(50)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="bachlb">
        <insert tableName="orders">
            <column name="customer_name" value="John Doe"/>
            <column name="product" value="Laptop"/>
            <column name="quantity" value="1"/>
            <column name="price" value="999.99"/>
            <column name="status" value="Shipped"/>
        </insert>
        <insert tableName="orders">
            <column name="customer_name" value="Jane Smith"/>
            <column name="product" value="Smartphone"/>
            <column name="quantity" value="2"/>
            <column name="price" value="499.99"/>
            <column name="status" value="Processing"/>
        </insert>
        <insert tableName="orders">
            <column name="customer_name" value="Alice Johnson"/>
            <column name="product" value="Tablet"/>
            <column name="quantity" value="3"/>
            <column name="price" value="299.99"/>
            <column name="status" value="Delivered"/>
        </insert>
    </changeSet>
</databaseChangeLog>